<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView13"
        style="@style/SproutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/frequency_title"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fadingEdge="horizontal"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/frequencyGroup"
            style="@style/Widget.MaterialComponents.ChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedChip="@id/mondayChip"
            app:chipSpacingHorizontal="0sp"
            app:itemSpacing="-5sp"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/mondayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mondayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tuesdayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesdayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/wednesdayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesdayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/thursdayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursdayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/fridayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fridayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/saturdayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturdayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sundayChip"
                style="@style/SproutChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sundayString"
                app:checkedIconEnabled="false"
                app:closeIconEnabled="false" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>