<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            style="@style/SproutTitle"
            android:text="@string/frequencyString"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/frequencyGroup"
                style="@style/Widget.MaterialComponents.ChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedChip="@id/mondayChip"
                app:chipSpacingHorizontal="0dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/mondayChip"
                    style="@style/SproutChip"
                    android:checked="true"
                    android:text="@string/mondayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tuesdayChip"
                    style="@style/SproutChip"
                    android:text="@string/tuesdayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/wednesdayChip"
                    style="@style/SproutChip"
                    android:text="@string/wednesdayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/thursdayChip"
                    style="@style/SproutChip"
                    android:text="@string/thursdayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/fridayChip"
                    style="@style/SproutChip"
                    android:text="@string/fridayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/saturdayChip"
                    style="@style/SproutChip"
                    android:text="@string/saturdayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sundayChip"
                    style="@style/SproutChip"
                    android:text="@string/sundayString"
                    app:checkedIconEnabled="false"
                    app:closeIconEnabled="false" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>