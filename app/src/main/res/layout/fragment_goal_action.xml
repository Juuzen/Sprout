<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.goal.GoalActionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="@string/actionToCompleteString" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/goalMaxActionPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_dividerColor="@color/primaryDarkColor"
            app:np_dividerType="underline"
            app:np_fadingEdgeEnabled="true"
            app:np_height="@dimen/number_picker_height"
            app:np_max="99"
            app:np_min="1"
            app:np_orientation="horizontal"
            app:np_value="15"
            app:np_width="@dimen/number_picker_width" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goalActionInfoString" />

</LinearLayout>