<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        style="@style/SproutBoldSubtitle"
        android:text="Streak" />

    <TextView
        style="@style/SproutInfo"
        android:text="Quando completi l'abitudine per un certo numero di giorni di fila, questa viene archiviata." />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/goalStreakPicker"
        style="@style/SproutNumberPicker"
        android:layout_width="match_parent"
        app:np_max="99"
        app:np_min="1"
        app:np_value="15"
        app:np_wheelItemCount="5" />

</LinearLayout>
