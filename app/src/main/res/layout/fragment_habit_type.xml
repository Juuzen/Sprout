<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/SproutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/habit_type_title" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/habitTypeViewPager"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/habitTypeViewPagerDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            tool:tabBackground="@drawable/dot_selector"
            tool:tabGravity="center"
            tool:tabIndicatorHeight="0px" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>