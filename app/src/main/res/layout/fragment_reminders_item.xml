<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal">
    
    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"

        android:contentDescription="@string/pauseContentDescription"
        android:padding="10dp"

        android:src="@drawable/pause_button_icon_selector"
        android:state_selected="true"
        android:tint="@color/pause_button_color_selector" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"

        android:layout_weight="1"
        android:background="@drawable/reminders_box"
        android:clickable="true"

        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/deleteContentDescription"
        android:padding="10dp"

        android:src="@drawable/ic_clear_24dp"
        android:tint="@color/redColor" />
</LinearLayout>